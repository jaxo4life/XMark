{
  "manifest_version": 3,
  "name": "XMark",
  "version": "4.0.0",
  "description": "XMark is a note-taking tool designed specifically for X (formerly Twitter)",
  "permissions": ["storage", "activeTab", "scripting", "downloads", "alarms"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "XMark"
  },
  "icons": {
    "128": "/public/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lang/*.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "key": ""
}
